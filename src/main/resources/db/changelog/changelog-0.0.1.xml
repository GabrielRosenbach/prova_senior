<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
	xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
	xmlns:pro="http://www.liquibase.org/xml/ns/pro"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
						http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.0.xsd
						http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

	<changeSet id="create_produto_servico" author="Gabriel Rosenbach">
		<createTable tableName="produto_servico">
			<column name="id" type="${uuid_type}"
				defaultValueComputed="${uuid_function}">
				<constraints nullable="false" primaryKey="true"
					primaryKeyName="produto_servico_pk" />
			</column>
			<column name="descricao" type="varchar(255)">
				<constraints nullable="false" />
			</column>
			<column name="preco" type="float">
				<constraints nullable="false" />
			</column>
			<column name="tipo" type="int">
				<constraints nullable="false" />
			</column>
		</createTable>
	</changeSet>

	<changeSet id="create_pedido" author="Gabriel Rosenbach">
		<createTable tableName="pedido">
			<column name="id" type="${uuid_type}"
				defaultValueComputed="${uuid_function}">
				<constraints nullable="false" primaryKey="true"
					primaryKeyName="pedido_pk" />
			</column>
			<column name="desconto" type="float">
				<constraints nullable="false" />
			</column>
			<column name="total" type="float">
				<constraints nullable="false" />
			</column>
		</createTable>
	</changeSet>

	<changeSet id="create_item_pedido" author="Gabriel Rosenbach">
		<createTable tableName="item_pedido">
			<column name="id_pedido" type="${uuid_type}">
				<constraints nullable="false" />
			</column>
			<column name="id_produto_servico" type="${uuid_type}">
				<constraints nullable="false" />
			</column>
			<column name="quantidade" type="int">
				<constraints nullable="true" />
			</column>
		</createTable>
		<addPrimaryKey columnNames="id_pedido, id_produto_servico"
			constraintName="item_pedido_pk"
			tableName="item_pedido" />
		<addForeignKeyConstraint baseColumnNames="id_pedido"
			baseTableName="item_pedido"
			constraintName="pedido_item_pedido_fk"
			onDelete="CASCADE"
			onUpdate="CASCADE"
			referencedColumnNames="id"
			referencedTableName="pedido"
			validate="true" />
		<addForeignKeyConstraint baseColumnNames="id_produto_servico"
			baseTableName="item_pedido"
			constraintName="produto_servico_item_pedido_fk"
			onDelete="CASCADE"
			onUpdate="CASCADE"
			referencedColumnNames="id"
			referencedTableName="produto_servico"
			validate="true" />
	</changeSet>

</databaseChangeLog>